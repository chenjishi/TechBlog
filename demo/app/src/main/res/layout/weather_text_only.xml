<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:background="#F00"
        android:paddingLeft="18dp"
        android:paddingRight="5dp">
    <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:textSize="10sp"
            android:text="网络异常"
            android:textColor="@android:color/white"/>
    <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/weather"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="北京"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20°"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@id/city"
            app:layout_constraintTop_toTopOf="@id/city"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"/>
    <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_constraintLeft_toLeftOf="@id/city"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:text="晴"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    <TextView
            android:id="@+id/air_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/weather"
            app:layout_constraintTop_toTopOf="@id/weather"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dp"
            android:text="36"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
</android.support.constraint.ConstraintLayout>